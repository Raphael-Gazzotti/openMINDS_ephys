{
  "_type": "/ephys/RecordingActivity",
  "_extends": "/core/schemas/research/experimentalActivity.schema.tpl.json",
  "properties": {
    "device": {
      "type": "array",
      "minItems": 1,  
      "uniqueItems": true,
      "_instruction": "Add all devices used during this recording activity.",
      "_linkedTypes": [
        "/ephys/ElectrodeArrayUsage",
        "/ephys/ElectrodeUsage",        
        "/ephys/PipetteUsage"
      ]
    },
    "input": {
      "_linkedTypes": [       
        "/core/SubjectGroupState",
        "/core/SubjectState",
        "/core/TissueSampleCollectionState",
        "/core/TissueSampleState"
      ]
    },
    "internalIdentifier": {
      "type": "string",
      "_instruction": "Enter the identifier (or label) of this recording activity that is used within the corresponding data files to identify this recording activity."
    }
  }
}
